+static void mtk_foe_entry_clear(struct mtk_ppe *ppe, u16 hash)
+{
+	struct mtk_foe_entry *hwe = mtk_foe_get_entry(ppe, hash);
+	hwe->ib1 &= ~MTK_FOE_IB1_STATE;
+	hwe->ib1 |= FIELD_PREP(MTK_FOE_IB1_STATE, MTK_FOE_STATE_UNBIND);
